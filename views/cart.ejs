<% title = 'Your Cart ‚Äì Vexa' %>

<%
  // Safely convert cart to plain JS objects (fixes ObjectId error)
  const plainCart = (Array.isArray(cart) ? cart : []).map(item => {
    return {
      product: item.product ? {
        _id: (item.product._id && item.product._id.toString) 
          ? item.product._id.toString() 
          : String(item.product._id || ''),
        name: item.product.name || 'Unknown Product',
        price: item.product.price || 0,
        category: item.product.category || 'General'
      } : null,
      quantity: item.quantity || 1
    };
  });
%>

<div class="cart-container">
  <div class="cart-header">
    <a href="/" class="btn-back">‚Üê Back to Shop</a>
    <h1>Your Shopping Cart</h1>
  </div>
  
  <% if (plainCart.length > 0) { %>
    <div class="cart-main">
      <div class="cart-items-section">
        <% plainCart.forEach(function(item, index) { %>
          <%
            const productId = item.product?._id || '';
            const productName = item.product?.name || 'Unknown Product';
            const price = item.product?.price || 0;
            const qty = item.quantity;
            const category = item.product?.category || 'General';
          %>
          <div class="cart-item" 
               data-product-id="<%- productId %>" 
               data-index="<%= index %>" 
               data-price="<%= price %>">
            <div class="item-left">
              <input type="checkbox" name="selected" value="<%= index %>" checked />
              <div class="item-info">
                <div class="item-category"><%= category %></div>
                <h3><%= productName %></h3>
                <div class="quantity-controls">
                  <button type="button" class="qty-btn qty-decrease">‚àí</button>
                  <span class="qty-display"><%= qty %></span>
                  <button type="button" class="qty-btn qty-increase">+</button>
                </div>
              </div>
            </div>
            <div class="item-right">
              <span class="item-price">$<%= (price * qty).toFixed(2) %></span>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="order-summary-section">
        <div class="summary-card">
          <h2>Order Summary</h2>
          <div id="summary-items">
            <ul id="summary-list"></ul>
          </div>
          <div class="summary-row shipping">
            <span>Shipping Fee</span>
            <span>$5.00</span>
          </div>
          <div class="summary-total">
            <strong>Total</strong>
            <strong id="summary-total">$0.00</strong>
          </div>
          <button type="button" id="confirmOrderBtn" class="btn btn-primary">Confirm Order</button>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="empty-cart">
      <div class="empty-icon">üõí</div>
      <h2>Your cart is empty</h2>
      <p>Looks like you haven‚Äôt added anything yet.</p>
      <a href="/" class="btn">Continue Shopping</a>
    </div>
  <% } %>
</div>

<!-- ORDER CONFIRMATION MODAL -->
<div id="orderModal" class="modal" style="display:none;">
  <div class="modal-content" style="max-width:500px; padding:2.5rem;">
    <h2>Confirm Your Order</h2>
    <div id="modalSummary"></div>
    
    <label>Shipping Address</label>
    <textarea name="shippingAddress" id="modalAddress" required 
      placeholder="Enter your shipping address"><%= (typeof user !== 'undefined' && user.address) ? user.address : '' %></textarea>
    
    <label>Payment Method</label>
    <select name="paymentMethod" id="modalPayment" required>
      <option value="cod">Cash on Delivery</option>
      <option value="gcash">GCash</option>
      <option value="maya">Maya</option>
      <option value="bank">Bank Transfer</option>
    </select>
    
    <div class="modal-total">
      <strong>Total: $<span id="modalTotal">0.00</span></strong>
    </div>
    
    <div class="modal-actions">
      <button type="button" id="closeModalBtn" class="btn-secondary">Cancel</button>
      <button type="button" id="submitOrderBtn" class="btn">Place Order</button>
    </div>
  </div>
</div>

<!-- TOAST -->
<div id="orderToast" class="toast"></div>

<style>
  .cart-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem 3rem;
  }
  .cart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 2rem 0;
  }
  .btn-back {
    background: #f1f5f9;
    color: #4b5563;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 10px;
    font-weight: 500;
  }
  .cart-header h1 {
    color: #1e293b;
    font-size: 2rem;
  }
  .cart-main {
    display: grid;
    grid-template-columns: 2fr 1fr;
