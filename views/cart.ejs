    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }
  .btn-secondary {
    flex: 1;
    background: #f1f5f9;
    color: #4b5563;
    border: none;
    padding: 0.875rem;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
  }
  .btn {
    flex: 1;
    background: #8b5cf6;
    color: white;
    border: none;
    padding: 0.875rem;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
  }

  /* Toast */
  .toast {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: #4ade80;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    z-index: 3000;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .toast.show {
    opacity: 1;
  }
  .toast.error {
    background: #f87171;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cart-main {
      grid-template-columns: 1fr;
    }
    .order-summary-section {
      position: static;
    }
  }
</style>

<script>
  // ‚úÖ SAFE: Now uses plainCart (no ObjectId errors)
  const safeCart = <%- JSON.stringify(plainCart) %>;
  let cartData = [...safeCart];

  function updateOrderSummary() {
    const checkboxes = document.querySelectorAll('input[name="selected"]:checked');
    const list = document.getElementById('summary-list');
    const totalEl = document.getElementById('summary-total');
    
    list.innerHTML = '';  
    let total = 0;

    checkboxes.forEach(cb => {
      const index = parseInt(cb.value, 10);
      const item = cartData[index];
      if (item && item.product) {
        const itemTotal = item.product.price * item.quantity;
        total += itemTotal;
        const li = document.createElement('li');
        li.innerHTML = `<span>${item.product.name} √ó ${item.quantity}</span> <span>$${itemTotal.toFixed(2)}</span>`;
        list.appendChild(li);
      }
    });

    const finalTotal = total + 5.00;
    totalEl.textContent = `$${finalTotal.toFixed(2)}`;
  }

  async function updateQuantityBackend(productId, quantity) {
    try {
      const res = await fetch(`/cart/update/${productId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ quantity })
      });
      if (!res.ok) {
        showToast('Failed to update quantity.', true);
      }
    } catch (err) {
      showToast('Network error.', true);
    }
  }

  function showToast(message, isError = false) {
    const toast = document.getElementById('orderToast');
    toast.textContent = message;
    toast.className = `toast${isError ? ' error' : ''}`;
    toast.classList.add('show');
    setTimeout(() => toast.classList.remove('show'), 3000);
  }

  document.addEventListener('click', async (e) => {
    if (e.target.classList.contains('qty-decrease') || e.target.classList.contains('qty-increase')) {
      const item = e.target.closest('.cart-item');
      const qtyDisplay = item.querySelector('.qty-display');
      let qty = parseInt(qtyDisplay.textContent);

      if (e.target.classList.contains('qty-decrease')) {
        qty = Math.max(1, qty - 1);
      } else {
        qty = Math.min(100, qty + 1);
      }

      qtyDisplay.textContent = qty;
      const index = parseInt(item.dataset.index, 10);
      cartData[index].quantity = qty;

      const newTotal = cartData[index].product.price * qty;
      item.querySelector('.item-price').textContent = `$${newTotal.toFixed(2)}`;
      updateOrderSummary();
      await updateQuantityBackend(item.dataset.productId, qty);
    }

    if (e.target.id === 'confirmOrderBtn') {
      const checkboxes = document.querySelectorAll('input[name="selected"]:checked');
      if (checkboxes.length === 0) {
        showToast('Please select at least one item.', true);
        return;
      }

      const ul = document.getElementById('modalSummary');
      ul.innerHTML = '<h3 style="margin:0 0 1rem;">Order Summary:</h3><ul style="list-style:none; padding:0;"></ul>';
      const list = ul.querySelector('ul');
      let total = 0;

      checkboxes.forEach(cb => {
        const index = parseInt(cb.value, 10);
        const item = cartData[index];
        if (item && item.product) {
          const itemTotal = item.product.price * item.quantity;
          total += itemTotal;
          const li = document.createElement('li');
          li.style.cssText = 'display:flex; justify-content:space-between; padding:0.5rem 0;';
          li.textContent = `${item.product.name} √ó ${item.quantity} ‚Äî $${itemTotal.toFixed(2)}`;
          list.appendChild(li);
        }
      });

      total += 5.00;
      document.getElementById('modalTotal').textContent = total.toFixed(2);
      document.getElementById('orderModal').style.display = 'flex';
    }

    if (e.target.id === 'closeModalBtn') {
      document.getElementById('orderModal').style.display = 'none';
    }

    if (e.target.id === 'submitOrderBtn') {
      const shippingAddress = document.getElementById('modalAddress').value.trim();
      const paymentMethod = document.getElementById('modalPayment').value;
      const checkboxes = document.querySelectorAll('input[name="selected"]:checked');
      
      if (!shippingAddress) {
        showToast('Please enter shipping address.', true);
        return;
      }
      if (checkboxes.length === 0) {
        showToast('No items selected.', true);
        return;
      }

      const items = [];
      checkboxes.forEach(cb => {
        const index = parseInt(cb.value, 10);
        const item = cartData[index];
        if (item && item.product) {
          items.push({
            _id: item.product._id,
            name: item.product.name,
            price: item.product.price,
            quantity: item.quantity
          });
        }
      });

      const total = parseFloat(document.getElementById('modalTotal').textContent);

      try {
        const res = await fetch('/orders/create', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ shippingAddress, paymentMethod, items, total })
        });

        const data = await res.json();
        document.getElementById('orderModal').style.display = 'none';

        if (data.success) {
          const selectedIndices = Array.from(checkboxes).map(cb => parseInt(cb.value, 10));
          await fetch('/cart/remove-ordered', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ itemIndexes: selectedIndices })
          });

          selectedIndices.sort((a, b) => b - a).forEach(index => {
            const el = document.querySelector(`.cart-item[data-index="${index}"]`);
            if (el) el.remove();
          });

          showToast('‚úÖ Order placed successfully!');
          
          const remaining = document.querySelectorAll('.cart-item').length;
          if (remaining === 0) {
            setTimeout(() => window.location.href = '/orders', 1500);
          } else {
            cartData = cartData.filter((_, i) => !selectedIndices.includes(i));
            updateOrderSummary();
          }
        } else {
          showToast('‚ùå ' + (data.message || 'Failed to place order.'), true);
        }
      } catch (err) {
        console.error('Order error:', err);
        showToast('‚ö†Ô∏è Network error. Please try again.', true);
        document.getElementById('orderModal').style.display = 'none';
      }
    }
  });

  document.addEventListener('change', (e) => {
    if (e.target.name === 'selected') {
      updateOrderSummary();
    }
  });

  document.getElementById('orderModal').addEventListener('click', (e) => {
    if (e.target.id === 'orderModal') {
      e.target.style.display = 'none';
    }
  });

  updateOrderSummary();
</script>