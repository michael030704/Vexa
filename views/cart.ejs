  .modal-content {
    border-radius: 20px !important;
    padding: 2.5rem !important;
  }
  .modal-content h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #1e293b;
  }
  .modal-content label {
    display: block;
    margin: 1rem 0 0.5rem;
    font-weight: 600;
    color: #1e293b;
  }
  .modal-content textarea,
  .modal-content select {
    width: 100%;
    padding: 0.875rem;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  .modal-total {
    text-align: right;
    font-size: 1.25rem;
    font-weight: 700;
    color: #8b5cf6;
    margin: 1.5rem 0;
    padding-top: 1rem;
    border-top: 2px solid #f1f5f9;
  }
